<!-- app/views/cars/edit.html.erb -->

<h1 style="color: #f73c2c;">Edit Car</h1>

<%= simple_form_for @car do |f| %>
  <%= f.input :name %>
  <%= f.input :fuel %>
  <%= f.input :make %>
  <%= f.input :seats %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to "Cancel", car_path(@car), class: 'btn btn-outline-danger'  %>
